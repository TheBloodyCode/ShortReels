<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="ShortReels"
            android:textSize="48sp"
            android:fontFamily="@font/bebas_neue"
            android:textColor="@color/accent_primary"
            android:letterSpacing="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="48dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            style="@style/Widget.ShortReels.TextInput"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_primary"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            style="@style/Widget.ShortReels.TextInput"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/text_muted"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/text_primary"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/btn_forgot_password"
            android:textColor="@color/accent_primary"
            android:textSize="13sp"
            android:layout_marginBottom="24dp" />

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/btn_login"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Widget.ShortReels.Button.Primary"
            android:layout_marginBottom="16dp" />

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/accent_primary"
            android:visibility="gone" />

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="20dp">

            <View android:layout_width="0dp" android:layout_height="1dp"
                android:layout_weight="1" android:background="@color/bg_card"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="o continÃºa con" android:textColor="@color/text_muted"
                android:textSize="12sp" android:paddingHorizontal="12dp"/>
            <View android:layout_width="0dp" android:layout_height="1dp"
                android:layout_weight="1" android:background="@color/bg_card"/>
        </LinearLayout>

        <!-- Google Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/btn_google_login"
            android:textColor="@color/text_primary"
            app:strokeColor="@color/bg_card"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="32dp" />

        <!-- Register link -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_no_account"
            android:textColor="@color/accent_primary"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
